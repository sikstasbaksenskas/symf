{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block body %}
    <h3 class="text-center"> Flowers orders </h3>
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% if flowers_orders %}
            <table id="flowers" class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Address</th>
                        <th>Name</th>
                        <th>Deliver on</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in flowers_orders %}
                        <tr>
                            <td>{{ order.address }}</td>
                            <td>{{ order.name }}</td>
                            <td>{{ order.getDeliverOn()|date("Y-m-d H:i:s") }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% else %}
                <p class="text-center">No flowers orders!</p>
            {% endif %}
        </div>
    </div>

    <h3 class="text-center"> Coffe orders </h3>
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% if coffe_orders %}
            <table id="coffe" class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Milk</th>
                        <th>Milk type</th>
                        <th>Cup size</th>
                        <th>Location</th>
                        <th>Deliver on</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in coffe_orders %}
                        <tr>
                            <td>{{ order.milk }}</td>
                            <td>{{ order.getMilkType() }}</td>
                            <td>{{ order.getCupSize() }}</td>
                            <td>{{ order.location }}</td>
                            <td>{{ order.getDeliverOn()|date("Y-m-d H:i:s") }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% else %}
                <p class="text-center">No coffe orders!</p>
            {% endif %}
        </div>
    </div>
{% endblock %}